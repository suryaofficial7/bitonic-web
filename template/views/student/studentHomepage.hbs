  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    const ctx = document.getElementById('myChart');
    const ctx3 = document.getElementById('myChart3');
    const ctx4 = document.getElementById('myChart4');
{{#if graphData}}
const jun = `{{graphData.jun}}`;
const jul = `{{graphData.jul}}`;
const aug = `{{graphData.aug}}`;
const sep = `{{graphData.sep}}`;
const oct = `{{graphData.oct}}`;
const nov = `{{graphData.nov}}`;
const dec = `{{graphData.dec}}`;
const jan = `{{graphData.jan}}`;
const feb = `{{graphData.feb}}`;
const mar = `{{graphData.mar}}`;

const apr = `{{graphData.apr}}`;
const may = `{{graphData.may}}`;
const totallec =`{{graphData.totallec}}`;
const presentlec =`{{graphData.presentlec}}`;
const absentlec =`{{graphData.absentlec}}`;



{{/if}}
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ["jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec", "Jan", "Feb", "Mar", "Apr", "May"],
        datasets: [{
          label: ' Attendace 2023-2024',
          data: [jun,jul,aug,sep,oct,nov,dec,jan,feb,mar,apr,may],
          backgroundColor: ['rgb(255, 135, 5,0.3)'],
          borderColor: ['rgb(255, 135, 5,1)'],

          borderWidth: 1,

        }],

      },
      options: {
        indexAxis: 'y',

        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });


    new Chart(ctx3, {
      type: 'bar',
      data: {
        labels: ["Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec", "Jan", "Feb", "Mar", "Apr", "May"],
        datasets: [{
          label: 'Teacher Attendace 2023-2024',
                   data: [jun,jul,aug,sep,oct,nov,dec,jan,feb,mar,apr,may],


          backgroundColor: ['rgb(255, 135, 5,0.3)'],
          borderColor: ['rgb(255, 135, 5,1)'],

          borderWidth: 1,

        }],

      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });



    new Chart(ctx4, {
      type: 'bar',
      data: {
        labels: ["Total Lec","Present","Absent"],
        datasets: [{
          label: 'Teacher Attendace 2023-2024',
          data: [totallec,presentlec,absentlec],
          backgroundColor: ['rgb(255, 135, 5,1)',
          'rgb(0,224,0,1)','rgb(254, 0, 0,1)'],
          borderColor: ['rgb(255, 135, 5,1)',
          'rgb(0,224,0,1)','rgb(254, 0, 0,1)'
          ],

          borderWidth: 1,

        }],

      },
      options: {
            indexAxis: 'y',
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>
