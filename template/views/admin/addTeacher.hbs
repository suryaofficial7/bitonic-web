  <form class="box ani2 m-0" style="text-align: center;" >
    <center>
Adding Teacher Account by  Admin - <code class="code">bitonic@admin3456-hdf <br></code>
</center>
<hr>
    <label for="teacherName">Teacher Name: <code style="font-weight: bolder;">*</code></label>
    <input type="text" id="teacherName" name="teacherName" placeholder="Issac Newton" required>

    <label for="username">Username:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="username" name="username" placeholder="name@institutionName" required>

  
    <label for="pwd">Password:<code style="font-weight:bolder">*</code></label>
    <input type="password" id="pwd" name="pwd" placeholder="S@surya123" required>
  <label for="email">Email:<code style="font-weight:bolder">*</code></label>
    <input type="email" id="email" name="email" placeholder="suryask@gmail.com" required>

    <label for="qualification">Qualification:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="qualification" name="qualification" placeholder="ex: MCA | MBA" required>

    <label for="dob">Date of Birth:<code style="font-weight:bolder">*</code></label>
    <input type="date" id="dob" name="dob" required>

    <label for="img">Select Image </label>
    <input type="file" accept="jpg" id="img" name="img" required>

   

    <label for="teacherOf">Teacher Of:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="teacherOf" name="teacherOf" placeholder="ex: Tybsc.IT or 10" required>

    <label for="mob">Mobile Number:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="mob" name="mob" placeholder="ex:8796751234" required>

    <label for="workingAt">Working At:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="workingAt" name="workingAt" required>

    <label for="posting">Posting:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="posting" name="posting" placeholder="ex teaching Staff | Worker" required>

    <label for="section">Section:<code style="font-weight:bolder">*</code></label>
    <input type="text" id="section" name="section" placeholder="A or B if None Type A" required>

    <input type="submit" value="Submit">
  </form>

