<body>

<div class="container mt-5">
  <center><h2>Student Admission Form</h2></center>
  <form class="my-form ani1" action="../insert/addTeacher" method="post"  enctype="multipart/form-data">

    <div class="form-row ani1">
      
      <div class="form-group col-md-12 ani1">
        <label for="studentName">Student Name</label>
        <input required type="text" class="form-control" id="studentName" placeholder="Student Name">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 ani2">
        <label for="username">Username</label>
        <input required type="text" class="form-control" id="username" placeholder="Username">
      </div>
      <div class="form-group col-md-6 ani2">
        <label for="email">Email</label>
        <input required type="email" class="form-control" id="email" placeholder="Email">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 ani3">
        <label for="contactNo">Contact Number</label>
        <input required type="tel" class="form-control" id="contactNo" minlength="10" maxlength="10" placeholder="Contact Number">
      </div>
      <div class="form-group col-md-6 ani3">
        <label for="dob">Date of Birth</label>
        <input required type="date" class="form-control" id="dob">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 ani4">
        <label for="img">Student Image</label>
        <input required type="file" class="form-control-file" id="img">
      </div>
       <div class="form-group col-md-6 ani6">
        <label for="active">Fees</label>
        <select id="active" class="form-control">
          <option selected>Choose...</option>
          <option value="1">Paid</option>
          <option value="0">UnPaid</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 ani5">
        <label for="section">Section</label>
        <input required type="text" class="form-control" id="section" placeholder="Section">
      </div>
      <div class="form-group col-md-6 ani5">
        <label for="rollno">Roll Number</label>
        <input required type="text" class="form-control" id="rollno" placeholder="Roll Number">
      </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
